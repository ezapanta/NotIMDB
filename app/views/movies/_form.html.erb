<%= form_for (@movie), :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :title, for:"title", class:"control-label col-sm-2"%>
	<div class="col-sm-8">
		<%= f.text_field :title, id:"title", class: 'form-control' %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :genre, class:"control-label col-sm-2" %>
	<div class="col-sm-8">
    <%= f.text_field :genre, class:'form-control' %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :director, class:"control-label col-sm-2" %>
	<div class="col-sm-8">
    <%= f.text_field :director, class:'form-control' %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :actor1, class:"control-label col-sm-2" %>
	<div class="col-sm-8">
    <%= f.text_field :actor1, class:'form-control' %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :actor2, class:"control-label col-sm-2" %>
	<div class="col-sm-8">
    <%= f.text_field :actor2, class:'form-control'  %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :actor3, class:"control-label col-sm-2" %>
	<div class="col-sm-8">
    <%= f.text_field :actor3, class:'form-control'  %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :releaseyr, class:"control-label col-sm-2" %>
	<div class="col-sm-8">
    <%= f.number_field :releaseyr, class:'form-control'  %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :rating, class:"control-label col-sm-2" %>
	<div class="col-sm-8">
    <%= f.number_field :rating, class:'form-control'  %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :description, class:"control-label col-sm-2" %>
	<div class="col-sm-8">
    <%= f.text_area :description, class:'form-control'  %>
	</div>
  </div>
  <div class="actions">

    <%= f.submit "Submit", class: "btn btn-primary" %>

  </div>
<% end %>
